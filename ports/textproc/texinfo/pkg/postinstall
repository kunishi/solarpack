EXAMPLE_DIR=$CLIENT_BASEDIR/share/examples/texinfo
INFODIR=$CLIENT_BASEDIR/info
INSTALL_INFO=$CLIENT_BASEDIR/bin/install-info

if test -f $CLIENT_BASEDIR/info/dir; then
	$INSTALL_INFO --info-dir=$INFODIR $INFODIR/info-stnd.info
	$INSTALL_INFO --info-dir=$INFODIR $INFODIR/info.info
	$INSTALL_INFO --info-dir=$INFODIR $INFODIR/texinfo
else
	/usr/ucb/install -c -m 0644 -o bin -g bin \
		$EXAMPLE_DIR/dir $CLIENT_BASEDIR/info/dir
fi
