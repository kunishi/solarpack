INFODIR=$CLIENT_BASEDIR/info
INSTALL_INFO=$CLIENT_BASEDIR/bin/install-info

if test -x ${INSTALL_INFO}; then
	${INSTALL_INFO} --info-dir=${INFODIR} ${INFODIR}/autoconf.info
	${INSTALL_INFO} --info-dir=${INFODIR} ${INFODIR}/standards.info
else
	/usr/bin/echo ">> Add autoconf.info entry to ${INFODIR}/dir by hand."
	/usr/bin/echo ">> Add standards.info entry to ${INFODIR}/dir by hand."
fi
