if [ ! -f /etc/shells ]; then
	cat <<EOF >/etc/shells
/usr/bin/sh
/usr/bin/csh
/usr/bin/ksh
/usr/bin/jsh
/bin/sh
/bin/csh
/bin/ksh
/bin/jsh
/sbin/sh
/sbin/jsh
EOF
fi

cp -p /etc/shells /etc/shells.bak
(grep -v $CLIENT_BASEDIR/bin/bash /etc/shells.bak; echo $CLIENT_BASEDIR/bin/bash) > /etc/shells

INFODIR=$CLIENT_BASEDIR/info
INSTALL_INFO=$CLIENT_BASEDIR/bin/install-info

if test -x ${INSTALL_INFO}; then
	${INSTALL_INFO} --info-dir=${INFODIR} ${INFODIR}/bash.info
else
	/usr/bin/echo ">> Add bash.info entry to ${INFODIR}/dir by hand."
fi
