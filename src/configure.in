dnl Process this file with autoconf to produce a configure script.
AC_INIT(mk/pkgbuild.conf)

AC_SUBST(pkgbuild_topdir)

dnl Checks for programs.
AC_PATH_PROG(PKGB_COMPRESS, compress, missing_compress)
AC_PATH_PROG(PKGB_MKDIR, mkdir, missing_mkdir)
AC_PATH_PROG(PKGB_PKGMK, pkgmk, missing_pkgmk)
AC_PATH_PROG(PKGB_PKGTRANS, pkgtrans, missing_pkgtrans)
AC_PATH_PROG(PKGB_RM, rm, missing_rm)
AC_PATH_PROG(PKGB_SED, sed, missing_sed)

dnl Checks for libraries.

dnl Checks for header files.

dnl Checks for typedefs, structures, and compiler characteristics.
AC_ARG_WITH(topdir,
[  --with-topdir	pkgbuild top directory.],
[pkgbuild_topdir="$with_topdir"],
[pkgbuild_topdir="/opt/local/pkgbuild"])

dnl Checks for library functions.

AC_OUTPUT(Makefile)
